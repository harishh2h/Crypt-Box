<btmnav>:
    password_en: password_en
    password_de: password_de
    BoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: toolbar
            title: "Crypt BOX"
            md_bg_color: app.theme_cls.primary_color

        MDBottomNavigation:
            id: srn_mngr
            screen1: screen1

            MDBottomNavigationItem:
                id:screen1
                name:"screen1"
                spacing: "10"
                padding:"50"
                text:"Encrypt"
                icon:"lock"

                MDLabel:
                    font_style: "Body1"
                    theme_text_color: "Primary"
                    text: "Choose file for Encryption"
                    pos_hint:{"center_x":0.5,"center_y":0.9}
                    halign:"center"

                MDTextField:
                    id: password_en
                    required: True
                    hint_text:"password"
                    pos_hint: {"center_x":.5,"center_y":.5}
                    size_hint: (0.5,None)

                MDFillRoundFlatIconButton:
                    text: "ENCRYPT"
                    icon: "lock"
                    pos_hint: {"center_x": .5,"center_y":0.3}
                    on_press: root.user_password_en(password_en)


                FloatLayout:
                    MDRoundFlatIconButton:
                        pos_hint: {"center_x": 0.5,"center_y":0.8}
                        text:"Choose File"
                        icon:"folder"
                        on_release: root.file_pick()
            MDBottomNavigationItem:
                name:"screen 2"
                text:"Decrypt"
                icon:"lock-open"

                MDLabel:
                    font_style: "Body1"
                    theme_text_color: "Primary"
                    text: "Choose file for Decryption"
                    pos_hint:{"center_x":0.5,"center_y":0.9}
                    halign:"center"

                MDTextField:
                    id: password_de
                    hint_text:"password"
                    required: "True"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    size_hint: (0.5,None)

                MDFillRoundFlatIconButton:
                    text: "DECRYPT"
                    icon: "lock-open"
                    pos_hint: {"center_x": .5,"center_y":0.3}
                    on_press: root.user_password_de(password_de)


                FloatLayout:
                    MDRoundFlatIconButton:
                        pos_hint: {"center_x": 0.5,"center_y":0.8}
                        text:"Choose File"
                        icon:"folder"

                        on_release: root.file_pick()